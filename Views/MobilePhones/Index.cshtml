@model IEnumerable<PersonalEstore.cs.Models.MobilePhones>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var _context = new PersonalEstore.cs.Models.ApplicationDbContext();
}


